<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="5dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:id="@+id/descriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_cardview"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/images"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/image_title"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLength="25"
            android:maxLines="1"
            android:padding="10dp"
            android:text="Roses"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/image_cardview"/>
        <!--<TextView
            android:id="@+id/time_des"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="10dp"
            android:text="yesterday"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:layout_toEndOf="@id/image_title"
            android:layout_alignBaseline="@id/image_title"
            android:textAlignment="viewEnd"/>
-->
        <TextView
            android:id="@+id/image_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/image_title"
            android:layout_below="@+id/image_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="10dp"
            android:text="Roses are red in color"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_toEndOf="@id/image_cardview"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>